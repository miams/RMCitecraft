{
  "manifest_version": 3,
  "name": "RMCitecraft FamilySearch Assistant",
  "version": "1.0.0",
  "description": "Extract census data from FamilySearch and send to RMCitecraft for automatic citation formatting",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://familysearch.org/*",
    "https://www.familysearch.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://familysearch.org/*",
        "https://www.familysearch.org/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
