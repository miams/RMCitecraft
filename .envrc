# Automatically activate virtual environment when entering this directory
source .venv/bin/activate

# Load environment variables from config/.env (primary location)
# This makes all env vars available in your shell AND to the application
if [ -f config/.env ]; then
    dotenv config/.env
fi

# Allow user-specific overrides via .envrc.local (gitignored)
if [ -f .envrc.local ]; then
    source_env .envrc.local
fi
